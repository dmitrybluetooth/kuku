@model Kuku.Models.TypeOfDish
@{
    ViewBag.Title = "Edit type of dish";
}
<form asp-action="EditTypeOfDish" asp-controller="Recipe" asp-route-typeofdishid="@Model.TypeOfDishId">
    <div class="form-group">
        <label asp-for="TypeOfDishName" class="control-label">Type of dish name</label>
        <input type="text" asp-for="TypeOfDishName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>