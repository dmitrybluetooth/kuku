@model Kuku.Models.NationalCuisine
@{
    ViewBag.Title = "Removal of national cuisine";
}

<div>
    <dl class="dl-horizontal">
        <dt>id</dt>
        <dd>
            @Html.DisplayFor(model => model.NationalCuisineId)
        </dd>
        
        <dt>name</dt>
        <dd>
            @Html.DisplayFor(model => model.NationalCuisineName)
        </dd>
    </dl>

    <div>
        <form asp-controller="Recipe" asp-action="DeleteNationalCuisine" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete national cuisine" />
            </div>
        </form>
    </div>
</div>