@model Kuku.Models.MeasuringSystem
@{
    ViewBag.Title = "Removal Measuring System";
}

<div>
    <dl class="dl-horizontal">
        <dt>id</dt>
        <dd>
            @Html.DisplayFor(model => model.MeasuringSystemId)
        </dd>

        <dt>name</dt>
        <dd>
            @Html.DisplayFor(model => model.MeasuringSystemName)
        </dd>

    </dl>

    <div>
        <form asp-controller="Recipe" asp-action="DeleteMeasuringSystem" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete Measuring System" />
            </div>
        </form>
    </div>
</div>