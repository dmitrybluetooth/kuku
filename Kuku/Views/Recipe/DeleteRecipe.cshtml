@model Kuku.Models.Recipe
@{
    ViewBag.Title = "Removal recipe";
}

<div>
    <dl class="dl-horizontal">
        <dt>id</dt>
        <dd>
            @Html.DisplayFor(model => model.RecipeId)
        </dd>

        <dt>name</dt>
        <dd>
            @Html.DisplayFor(model => model.RecipeName)
        </dd>

    </dl>

    <div>
        <form asp-controller="Recipe" asp-action="DeleteRecipe" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete recipe" />
            </div>
        </form>
    </div>
</div>