@model Kuku.Models.Recipe_Product
@{
    ViewBag.Title = "Removal product from recipe";
}

<div>
    <dl class="dl-horizontal">
        <dt>recipe id</dt>
        <dd>
            @Html.DisplayFor(model => model.RecipeId)
        </dd>

        <dt>recipe name</dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.RecipeName)
        </dd>

        <dt>product id</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt>product name</dt>
        <dd>
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
    </dl>

    <div>
        <form asp-controller="Recipe" asp-action="DeleteRecipe_Product" asp-route-productid="@Model.Product.ProductId" asp-route-recipeid="@Model.Recipe.RecipeId" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>