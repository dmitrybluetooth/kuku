@model Kuku.Models.SP_RecipeDetails
@{
    ViewData["Title"] = "Create recipe details";
}
<form asp-action="CreateRecipeDetail" asp-controller="Recipe" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="DescriptionRD" class="control-label">Description</label>
        <input type="text" asp-for="DescriptionRD" class="form-control" />
    </div>

    <div class="form-group">
        <label>Select an image</label>
        <input name="uploadedFile" type="file" class="form-control" />
    </div>

    <p>
        <input type="submit" value="Create recipe details" />
    </p>
</form>
