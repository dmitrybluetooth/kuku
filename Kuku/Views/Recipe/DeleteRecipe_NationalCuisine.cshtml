@model Kuku.Models.Recipe_NationalCuisine
@{
    ViewBag.Title = "Removal national cuisine from recipe";
}

<div>
    <dl class="dl-horizontal">
        <dt>recipe id</dt>
        <dd>
            @Html.DisplayFor(model => model.RecipeId)
        </dd>

        <dt>recipe name</dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.RecipeName)
        </dd>

        <dt>national cuisine id</dt>
        <dd>
            @Html.DisplayFor(model => model.NationalCuisineId)
        </dd>
        <dt>national cuisine name</dt>
        <dd>
            @Html.DisplayFor(model => model.NationalCuisine.NationalCuisineName)
        </dd>
    </dl>

    <div>
        <form asp-controller="Recipe" asp-action="DeleteRecipe_NationalCuisine" asp-route-nationalcuisineid="@Model.NationalCuisine.NationalCuisineId" asp-route-recipeid="@Model.Recipe.RecipeId" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>