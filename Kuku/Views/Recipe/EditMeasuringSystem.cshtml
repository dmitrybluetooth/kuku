@model Kuku.Models.MeasuringSystem
@{
    ViewBag.Title = "Edit Measuring System";
}
<form asp-action="EditMeasuringSystem" asp-controller="Recipe" asp-route-measuringsystemid="@Model.MeasuringSystemId">
    <div class="form-group">
        <label asp-for="MeasuringSystemName" class="control-label">Product type name</label>
        <input type="text" asp-for="MeasuringSystemName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>